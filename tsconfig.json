{
    "compilerOptions": {
      "target": "es2016",                          
      "module": "commonjs",                    
      "allowJs": true,
      "outDir": "./build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    }
  }